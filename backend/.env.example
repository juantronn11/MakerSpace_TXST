PORT=3001

# URL of the frontend dev server (for CORS)
FRONTEND_URL=http://localhost:5173

# Firebase Admin SDK credentials
# Download from: Firebase Console → Project Settings → Service Accounts → Generate new private key
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Printer IP addresses — stored here only, never in git or Firestore
# Key must match the "Printer Key" set in the app UI for each printer
# Format: JSON object  key → local IP
PRINTER_IPS={"printer1":"","printer2":""}
